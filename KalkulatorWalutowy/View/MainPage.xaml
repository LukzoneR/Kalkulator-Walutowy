<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KalkulatorWalutowy"
             xmlns:view="clr-namespace:KalkulatorWalutowy.View"
             x:Class="KalkulatorWalutowy.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Currency Converter" FontSize="24" HorizontalOptions="Center" />

            <Entry Placeholder="Amount" Keyboard="Numeric" TextChanged="OnTextChanged" Text="{Binding Amount}" Margin="20,0,20,0"/>

            <Picker Title="From:" x:Name="picker1" SelectedItem="{Binding SelectedFrom}" Margin="20,0,20,0">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>PLN</x:String>
                        <x:String>EUR</x:String>
                        <x:String>USD</x:String>
                        <x:String>bitcoin</x:String>
                        <x:String>ethereum</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
                Text="⇅"
                WidthRequest="40"
                HeightRequest="40"
                CornerRadius="40"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="20"
                Padding="0" 
                Clicked="OnExchangeButtonClicked"/>


            <Picker Title="To:" x:Name="picker2" SelectedItem="{Binding SelectedTo}" Margin="20,0,20,40">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>PLN</x:String>
                        <x:String>EUR</x:String>
                        <x:String>USD</x:String>
                        <x:String>bitcoin</x:String>
                        <x:String>ethereum</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Enter" Command="{Binding ConvertCommand}" BackgroundColor="DodgerBlue" WidthRequest="80" TextColor="White"/>

            <Label Text="Result:" FontSize="18" />
            <Label Text="{Binding Result}" FontSize="22" TextColor="DarkGreen" FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
